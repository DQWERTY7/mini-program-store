<view class="container">
  <view>
    <swiper class="swiper_box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{goodsPicsInfo}}">
        <swiper-item>
            <image src="{{item.picurl}}" class="slide-image" width="355" height="150" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="shopping_container">
    <view class="title">{{shoppingDetails.title}}</view>
    <view class="reason">{{shoppingDetails.reason}}</view>
  </view>

  <view>
    <form>
      <view class="line">
        <view class="section_price">
          <text id="price">￥{{shoppingDetails.ourprice}}</text>        
        </view>
        <view class="section quantity">
          <view>购买数量：</view>
          <input id="quantity" name="quantity" bindinput="bindQuantityInput" value="1" type="number"/>
        </view>
        <view class="btn_area">
          <button bindtap="bindAddTocart" type="primary" size="mini">加入购物车</button>
        </view>
      </view>
    </form>
  </view>
</view>